@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/newbootstrap.js" type="text/javascript"></script>

<div class="jumbotron" id="header">
    <h1 id="headerText">GameTopia!</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Welcome</h2>
        <p>
            Video Games are only becoming more and more popular. The purpose of this
            website is to have a singular place for users to come to view old, new, or upcoming games;
            that they can then write reviews on that all users can view.
        </p>
        <hr />
        <h2>Get Started!</h2>
        @if (User.IsInRole("Site Admin") || User.IsInRole("Video Game Admin") || User.IsInRole("Reviewer") || User.IsInRole("Guest"))
        {
            <p>View the video game library by clicking the button below.</p>
            <button type="button" onclick="location.href='@Url.Action("Index", "VideoGamesList")'" class="btn btn-primary">View Library</button>
        }
        else
        {
            <p>Please Login or Register to gain more access to the site</p>
            <button type="button" onclick="location.href='@Url.Action("Register", "Account")'" class="btn btn-primary">Register</button>
        }

        @if (User.IsInRole("Site Admin") || User.IsInRole("Video Game Admin") || User.IsInRole("Reviewer") || User.IsInRole("Guest"))
        {
            @*gallery slide show*@
            <div id="myCarousel" class="carousel slide marginTop" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <a href=@Url.Action("Details", "VideoGamesList", new { id = 2 })><img src="~/Content/Images/cuphead.png"></a>
                    </div>
                    <div class="item">
                        <a href=@Url.Action("Details", "VideoGamesList", new { id = 1 })><img src="~/Content/Images/mgs5.png"></a>
                    </div>
                    <div class="item">
                        <a href=@Url.Action("Details", "VideoGamesList", new { id = 12 })><img src="~/Content/Images/superMarioOdyssey.jpg"></a>
                    </div>
                    <div class="item">
                        <a href=@Url.Action("Details", "VideoGamesList", new { id = 19 })><img src="~/Content/Images/Portal2.jpg"></a>
                    </div>
                    <div class="item">
                        <a href=@Url.Action("Details", "VideoGamesList", new { id = 6 })><img src="~/Content/Images/ds3.jpg"></a>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }


    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-4">
        <h4 class="text-center">Join the community Discord</h4>
        <iframe src="https://discordapp.com/widget?id=424343092905115649&theme=dark" width="350" height="500" allowtransparency="true" frameborder="0"></iframe>
    </div>
</div>

