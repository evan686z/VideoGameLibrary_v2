@{
    ViewBag.Title = "Add Role To User";
}

<h2>Add Role To User</h2>
<h5>User Name: @ViewBag.UserName</h5>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
}
@using (Html.BeginForm("AddRoleToUser", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        Role Name: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
    </p>

    @Html.Hidden("userName", ViewBag.UserName as string)

    <div class="form-actions no-color">
        <input type="button" value="Back to List" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Account")'" />
        <input type="submit" value="Save" class="btn btn-success" />
    </div>    
}