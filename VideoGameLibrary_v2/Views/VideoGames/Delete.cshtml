@model VideoGameLibrary_v2.Models.VideoGame

@{
    ViewBag.Title = "Delete Video Game";
}

<h2>Delete @Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <h5 class="text-danger">Are you sure you want to delete this?</h5>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Developer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Developer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "VideoGames", new { id = Model.Id })'" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
