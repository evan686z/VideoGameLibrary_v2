@model VideoGameLibrary_v2.Models.EditUserViewModel

@{
    ViewBag.Title = "ViewProfile";
    ViewBag.FullName = @Html.DisplayFor(model => model.FirstName) + " " + @Html.DisplayFor(model => model.LastName);
}
<div class="container">
    <div class="details-wrapper">
        <div class="container">
            <div>
                <h4>Profile Details</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Name
                    </dt>

                    <dd>
                        @ViewBag.FullName
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Age)
                    </dd>

                </dl>
            </div>
            <div class="form-group">
                <input type="button" value="Back" class="btn btn-primary btn-theme" onclick="location.href='@Url.Action("Index", "Manage")'" />
                <input type="button" value="Edit Profile" class="btn btn-warning btn-theme" onclick="location.href='@Url.Action("EditProfile", "Manage", new { userName = Model.UserName })'" />
            </div>
        </div>
    </div>
</div>