@model VideoGameLibrary_v2.Models.VideoGameReviewViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Review for :</h2>

<div>
    <h4>@Html.DisplayFor(model => model.VideoGameName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
</div>

<div class="form-group">
    <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Reviews")'" />
    <input type="button" value="Edit" class="btn btn-warning" onclick="location.href='@Url.Action("Edit", "Reviews", new { id = Model.Id })'" />
    <input type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Reviews", new { id = Model.Id })'" />
</div>
