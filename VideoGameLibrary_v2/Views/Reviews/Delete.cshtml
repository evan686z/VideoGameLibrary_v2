@model VideoGameLibrary_v2.Models.VideoGameReviewViewModel

@{
    ViewBag.Title = "Delete Video Game";
}

<h2>Delete Review for @Html.DisplayFor(model => model.VideoGameName)</h2>

<div>
    <hr />
    <h5 class="text-danger">Are you sure you want to delete this?</h5>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Reviews", new { id = Model.Id })'" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
    }
</div>
