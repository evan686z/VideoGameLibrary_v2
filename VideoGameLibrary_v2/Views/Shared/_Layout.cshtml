<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/Content/Images/favicon.ico">
    <title>@ViewBag.Title - Game Topia!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light">
        <div class="container bg-secondary">
            <div class="navbar-brand">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand color-white nav-item" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav nav mr-auto">
                    @if (User.IsInRole("Site Admin") || User.IsInRole("Video Game Admin") || User.IsInRole("Reviewer") || User.IsInRole("Guest"))
                    {
                        <li class="nav-item">@Html.ActionLink("Video Game List", "Index", "VideoGamesList", new { area = "" }, new { @class = "linkClean" })</li>
                    }
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "linkClean" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact Us", "ContactUs", "Home", new { area = "" }, new { @class = "linkClean" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FriisCo Productions</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
